{% extends 'base.html.twig' %}

{% block title %}Profil{% endblock %}

{% block body %}
    <!-- Main layout -->
    <br><br><br><br><br><br>
    <main>
        <div class="row">
                    <div class="col-lg-4 mb-4">
                    <div class="card">
                    <h5 class="card-header">Mes Informations</h5>
                    <div class="card-body">
                    <h6 class="card-title">Nombre d'offres:</h6> ...

                    </div>
                    </div>

                    </div>

        <div class="col-lg-8 mb-4">
            <div class="card">
                <h5 class="card-header">Modifier le profil</h5>
                <div class="card-body">
                    <div class="card-body card-body-cascade text-center">
                        {{ form_start(form) }}
                        <div class="row">
                            <div class="col-md-6">
                                <div class="md-form mb-0">
                                    {{ form_row(form.nom) }}
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="md-form mb-0">
                                    {{ form_row(form.prenom) }}
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="md-form mb-0">
                                    {{ form_row(form.tel) }}
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="md-form mb-0">
                                    {{ form_row(form.email) }}
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-4">
                                <div class="md-form mb-0">
                                    {{ form_row(form.pays) }}
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="md-form mb-0">
                                    {{ form_row(form.ville) }}
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="md-form mb-0">

                                    <label for="mdp" data-error="az" >Mot de passe</label>
                                    <input type="password" name="mdp" id="mdp" class="form-control">

                                    {% if error!=null %}
                                        <span class="invalid-feedback d-block"><span class="d-block">
                    <span class="form-error-icon badge badge-danger text-uppercase">Erreur</span> <span class="form-error-message">{{ error }}</span>
                </span></span>{% endif %}

                                    {{ form_widget(form.password,{'attr': {'value': mdp,'hidden':true}}) }}

                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12 text-center my-4">
                                {{ form_row(form.submit,{'attr': {'class': 'btn-info'}}) }}
                            </div>
                        </div>
                    </div>
                    {{ form_end(form) }}
                </div>

            </div>

        </div>
        </div>
    </main>
{% endblock %}
