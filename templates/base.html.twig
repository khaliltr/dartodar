            <link rel="stylesheet" href="vendors/nice-select/nice-select.css">
            <link rel="stylesheet" href="{{  asset('css/style.css')  }}">
        {% endblock %}
    </head>
    <body  class="bg-shape">
    <!--================ Header Menu Area start =================-->
    <header class="header_area">
        <div class="main_menu">
            <nav class="navbar navbar-expand-lg navbar-light">
                <div class="container box_1620">
                    <a class="navbar-brand logo_h" href="index.html"><img src="{{ asset('img/img.png')}}" alt="" width="200px" ></a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>

                    <div class="pr-5 collapse navbar-collapse offset" id="navbarSupportedContent">
                        <ul class="nav navbar-nav menu_nav justify-content-end">
                            <li class="nav-item active"><a class="nav-link" href="{{path('acceuil')}}">Acceuil</a></li>

                            <li class="nav-item"><a class="nav-link" href="{{path('recherche')}}">Recherche</a>

                            <li class="nav-item"><a class="nav-link" href="{{ path('mes-offres') }}">Mes offres</a>

                            <li class="nav-item"><a class="nav-link" href="{{path('contact')}}">Contact</a>


                        </ul>

                        <div class="nav-right text-center text-lg-right py-4 py-lg-0">
                            {% if app.user %}
                                <div class="mb-3">
                                    <a href="{{path('profil')}}">{{ app.user.username }}</a>, <a class="btn btn-outline-danger my-2 my-sm-0" href="{{path('app_logout')}}" role="button">Se d√©connecter</a>

                                </div>
                            {% else %}
                                <a class="btn btn-outline-success my-2 my-sm-0 mr-1" href="{{path('app_login')}}" role="button">Login</a>
                                <a class="btn btn-outline-success my-2 my-sm-0" href="{{path('app_register')}}" role="button">Inscription</a>
                            {% endif %}
                        </div>

                    </div>
                </div>
            </nav>
        </div>
    </header>
    <!--================Header Menu Area =================-->

        {% block body %}

        {% endblock %}

        {% block javascripts %}
            <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>

            <script
                    src="https://code.jquery.com/jquery-3.5.1.min.js"
                    integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="
                    crossorigin="anonymous"></script>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.0/js/bootstrap.bundle.min.js"></script>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-nice-select/1.1.0/js/jquery.nice-select.min.js"></script>
            <script src="{{ asset('js/jquery.ajaxchimp.min.js') }}"></script>
            <script src="{{ asset('js/mail-script.js') }}"></script>
            <script src="{{ asset('js/skrollr.min.js') }}"></script>
            <script src="{{ asset('js/main.js') }}"></script>

        {% endblock %}
